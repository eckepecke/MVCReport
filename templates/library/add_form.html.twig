{% extends 'base.html.twig' %}

{% block title %}Add form{% endblock %}

{% block body %}

<div class="doc">
    <form action="{{ path('create_book') }}" method="POST">
        <h1>Add book</h1>
        <input type="text" name="title" placeholder="Title" required="required">
        <input type="text" name="isbn" pattern="[0-9]*" placeholder="ISBN" required="required">
        <input type="text" name="author" placeholder="Author" required="required">
        <input type="text" name="image_name" placeholder="Image name" required="required">
        <button type="submit">Submit</button>
    </form>
</div>

{% endblock %}
