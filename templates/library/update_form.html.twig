{% extends 'base.html.twig' %}

{% block title %}Add form{% endblock %}

{% block body %}

<div class="doc">
    <form class="book-form" action="{{ path('update_data') }}" method="POST">
        <h1>Update book</h1>
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" value="{{ book.title }}" name="title" placeholder="{{ book.title }}" required="required">
        </div>
        <div>
            <label for="isbn">ISBN:</label>
            <input type="text" id="isbn" value="{{ book.isbn }}" name="isbn" pattern="[0-9]*" placeholder="{{ book.isbn }}" required="required">
        </div>
        <div>
            <label for="author">Author:</label>
            <input type="text" id="author" value="{{ book.author }}" name="author" placeholder="{{ book.author }}" required="required">
        </div>
        <div>
            <label for="description">Description:</label>
            <textarea id="description" value="{{ book.description }}" name="description" placeholder="{{ book.description }}" maxlength="255" rows="4"></textarea>
        </div>
        <div>
            <label class="input-label" for="year">Year of publication:</label>
            <input type="text" id="year" value="{{ book.publishedYear }}" name="year" placeholder="Year of publication">
        </div>
        <div>
            <label for="image_name">Image name:</label>
            <input type="text" id="image_name" value="{{ book.img }}" name="image_name" placeholder="{{ book.img }}" required="required">
        </div>
            <input type="hidden" name="id" value="{{ book.id }}">
        <button class="button" type="submit">Submit</button>
    </form>
</div>
{% endblock %}
